<EditForm Model=@options OnSubmit=@FormSubmitted class="form-inline py-5">
    <div class="form-group bg-light py-5 mb-0 rounded">
        <div class="text-nowrap pl-10">
            <b>Ending:</b>
            <InputSelect @bind-Value=options.EndYear>
                @foreach(var year in endYears){<option>@year</option>}
            </InputSelect>
            <InputSelect @bind-Value=options.EndMonth>
                <option value="1">January</option>
                <option value="2">February</option>
                <option value="3">March</option>
                <option value="4">April</option>
                <option value="5">May</option>
                <option value="6">June</option>
                <option value="7">July</option>
                <option value="8">August</option>
                <option value="9">September</option>
                <option value="10">October</option>
                <option value="11">November</option>
                <option value="12">December</option>
            </InputSelect>
        </div>
        <div class="text-nowrap pl-10">
            <b>Frequency:</b>
            <InputSelect @bind-Value=options.FrequencyMonths>
                <option value="1">Monthly</option>
                <option value="3">Quarterly</option>
                <option value="6">Half-Yearly</option>
                <option value="12">Yearly</option>
            </InputSelect>
        </div>
        <div class="pl-10">
            <input type="submit" value="Update" class="btn btn-primary" />
        </div>
    </div>
</EditForm>